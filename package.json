{
  "name": "varken",
  "version": "2.0.0",
  "description": "Standalone application to aggregate data from the Plex ecosystem into time-series databases",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "clean": "rm -rf dist .reports node_modules logs data",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "docker-test:start": "docker compose -f docker-compose.test.yaml up -d",
    "docker-test:stop": "docker compose -f docker-compose.test.yaml down",
    "docker-test:check": "./scripts/check-data.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Navino16/Varken.git"
  },
  "keywords": [
    "plex",
    "sonarr",
    "radarr",
    "tautulli",
    "influxdb",
    "grafana",
    "monitoring",
    "metrics"
  ],
  "author": "navino16",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Navino16/Varken/issues"
  },
  "homepage": "https://github.com/Navino16/Varken#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@influxdata/influxdb-client": "^1.35.0",
    "@influxdata/influxdb-client-apis": "^1.35.0",
    "@maxmind/geoip2-node": "^5.0.0",
    "axios": "^1.7.0",
    "influx": "^5.9.0",
    "winston": "^3.17.0",
    "yaml": "^2.6.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.15"
  }
}
